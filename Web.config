<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<system.web>
		<!-- Configuración de autenticación -->
		<authentication mode="Forms">
			<forms loginUrl="~/Default.aspx" name=".ASPAUTH" defaultUrl="WFInicio.aspx" protection="All" />
		</authentication>
		<!-- Bloquear acceso general a usuarios no autenticados -->
		<authorization>
			<deny users="?" />
		</authorization> 

		<!-- Configuración del compilador -->
		<compilation debug="true" targetFramework="4.7.2" />
		<httpRuntime targetFramework="4.7.2" />
	</system.web>

	<!-- Excepciones: Permitir acceso a Inicio y Productos -->
	<location path="WFInicio.aspx">
		<system.web>
			<authorization>
				<allow users="*" />
			</authorization>
		</system.web>
	</location>
	<location path="ProductosCliente.aspx">
		<system.web>
			<authorization>
				<allow users="*" />
			</authorization>
		</system.web>
	</location>

	<!-- Cadena de conexión a MySQL -->
